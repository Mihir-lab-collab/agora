    <script type="text/javascript">
        addEventListener("change", function () {
            checkReviewManual = document.getElementById("checkReviewManual").checked;
            if (checkReviewManual) {
                document.getElementById('btnHrManual').disabled = false;
                document.getElementById('btnHrManual').classList.add("btn-color");
                $("#message").html("");
