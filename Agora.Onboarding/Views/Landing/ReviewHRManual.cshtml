            else {
                document.getElementById('btnHrManual').disabled = true;
                $("#message").html("<span style='color: #FF774D; font-family:muliregular;'>Note: Please review the handbook before you can proceed further</span></p>");
            }

        });
       
    </script>
    <script>
        const slider = document.querySelector('.slider');
        const hiddenText = document.getElementById('hiddenText');
        const prevButton = document.getElementById('prevButton');
        const nextButton = document.getElementById('nextButton');
        const slideCounter = document.getElementById('slideCounter');
        const reviewManual = document.getElementById('reviewManual');

        let slideIndex = 0;

        function showHiddenText() {
            var val = '@ViewBag.IsSuccess';
            var hdnval = document.getElementById('hdncheckcondition').value;
            if (slideIndex === slider.children.length - 1) {
                hiddenText.style.display = 'block';
                reviewManual.style.display = 'flex';
                document.cookie = "checked=success";
                document.getElementById('hdncheckcondition').value = "true";
            } else {
                const cookieValue = document.cookie
                    .split(';')
                    .find(cookie => cookie.startsWith("checked" + '='));
                if (val == "true" && hdnval == "false") {
                    hiddenText.style.display = 'none';
                    reviewManual.style.display = 'none';
                }
                 else if (cookieValue == "checked=success") {
                    console.log('success');
                    hiddenText.style.display = 'block';
                    reviewManual.style.display = 'flex';
                } else {
                    hiddenText.style.display = 'none';
                    reviewManual.style.display = 'none';
                }

            }
        }

        function updateSlideCounter() {
            slideCounter.textContent = `${slideIndex + 1} of ${slider.children.length}`;
        }

        function slideTo(index) {
            if (index < 0) {
                index = 0;
            } else if (index >= slider.children.length) {
                index = slider.children.length - 1;
            }

            slideIndex = index;
            const offset = -slideIndex * 100;
            slider.style.transform = `translateX(${offset}%)`;
            showHiddenText();
            updateSlideCounter();
        }

        prevButton.addEventListener('click', () => {
            slideTo(slideIndex - 1);
        });

        nextButton.addEventListener('click', () => {
            slideTo(slideIndex + 1);
        });

        // Initial slide position
        slideTo(0);

        let checkReviewManual = document.getElementById("checkReviewManual").checked;
        let reviewhrManual = document.getElementById('reviewManual');
        let hidden_Text = document.getElementById('hiddenText');
        if (checkReviewManual) {
            slideTo(28);
            hidden_Text.style.display = 'block';
            document.getElementById("checkReviewManual").disabled = true;
            reviewhrManual.style.display = 'flex';
            document.getElementById('btnHrManual').disabled = false;
            $("#message").html("");

        }
        else {
            document.getElementById('btnHrManual').disabled = true;
            document.getElementById('btnHrManual').classList.remove("btn-color");
        }
    </script>
